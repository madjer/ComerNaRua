<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="80dp"
    android:padding="6dip"
    android:background="@drawable/bg_elchancho"
    android:id="@+id/imageViewLine"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp">

    <ImageView
        android:id="@+id/imagemview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/button_onoff_indicator_on"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="0dp"/>
    <ImageView
        android:id="@+id/legenda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/button_onoff_indicator_on"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="340dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="20dp">


        <TextView
            android:id="@+id/itemTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textStyle="bold"
            android:layout_alignWithParentIfMissing="true"
            android:gravity="center_vertical"
            android:textColor="@color/blank"
            android:text="Route Name"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/itemDesc"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:ellipsize="marquee"
            android:textColor="@color/blank"
            android:text="descrição descrição descrição descrição descrição descrição descrição descrição"
            android:textSize="15sp"
            android:maxLines="3"/>
    </RelativeLayout>
</RelativeLayout>